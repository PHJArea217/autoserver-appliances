#!/bin/sh
set -eu
ip link set lo up
ip link add br0 type bridge
sysctl -w net.ipv6.conf.br0.accept_ra=0
ip addr add '172.30.7.245/21' dev br0
ip addr add '172.30.7.246/21' dev br0
ip addr add '172.30.7.247/21' dev br0
ip addr add '172.30.7.248/21' dev br0
ip addr add 'fe80::300:8888:8888:8885/64' dev br0
ip addr add 'fe80::300:8888:8888:8886/64' dev br0
ip addr add 'fe80::300:8888:8888:8887/64' dev br0
ip addr add 'fe80::300:8888:8888:8889/64' dev br0
ip link set br0 up
ip route add 0.0.0.0/0 via 172.30.0.1
# ip link set enp1s0 master br0 up
